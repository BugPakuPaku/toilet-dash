{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "nextjsFunc"
      }
    ]
  },
  "functions": {
    "runtime": "nodejs20",  
    "source": ".",  
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run build",
      "npx tsc --skipLibCheck firebaseFunctions.ts"
    ]
  }
}
